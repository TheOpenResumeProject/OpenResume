{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {"type": "string", "const": "0.0.1"},
    "format": {"type": "string", "const": "orf"},
    "meta": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "sort": {"type": "string", "default": "chrono"},
        "sort_order": {"type": "string", "default": "asc"},
        "tags": {"type": "array", "items": {"type": "string"}}
      },
      "required": ["name"]
    },
    "data": {
      "type": "object",
      "properties": {
        "personal": {
          "type": "object",
          "properties": {
            "name": {"type": "string"},
            "phone_number": {"type": "string"},
            "email": {"type": "string"},
            "country_code": {"type": "string"},
            "address_line_1": {"type": ["string", "null"]},
            "address_line_2": {"type": ["string", "null"]},
            "city": {"type": "string"},
            "state": {"type": "string"},
            "country": {"type": "string"},
            "url_linkedin": {"type": ["string", "null"]},
            "url_website": {"type": ["string", "null"]},
            "url_portfolio": {"type": ["string", "null"]},
            "url_other": {
              "type": "array",
              "items": {"type": ["string", "null"]}}
            }
          },
          "required": ["name", "phone_number", "email"]
        },
        "education": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "degree_level": {"type": "string"},
              "degree_title": {"type": "string"},
              "completed": {"type": "boolean"},
              "institution": {"type": "string"},
              "institution_city": {"type": "string"},
              "institution_state": {"type": "string"},
              "institution_zip": {"type": ["string", "null"]},
              "institution_country": {"type": ["string", "null"]},
              "major": {"type": "string"},
              "concentration": {"type": ["string", "null"]},
              "minor": {"type": ["string", "null"]},
              "gpa": {"type": ["string", "null"]},
              "gpa_scale": {"type": ["string", "null"]},
              "start_day": {"type": ["integer", "null"]},
              "start_month": {"type": ["integer", "null"]},
              "start_year": {"type": "integer", "minimum": 1900},
              "end_day": {"type": ["integer", "null"]},
              "end_month": {"type": ["integer", "null"]},
              "end_year": {"type": "integer", "minimum": 1900}
            },
            "required": ["degree_level", "degree_title", "completed", "institution", "start_year", "end_year"]
          }
        },
        "experience": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {"type": "string"},
              "employer": {"type": "string"},
              "employer_city": {"type": "string"},
              "employer_state": {"type": "string"},
              "employer_country": {"type": ["string", "null"]},
              "description": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "required": ["title", "employer"]
          }
        },
        "summary": {"type": "string"},
        "projects": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {"type": "string"},
              "sub_title": {"type": "string"},
              "url": {"type": "string"},
              "description": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "required": ["title"]
          }
        },
        "publication": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {"type": "string"},
              "url": {"type": "string"},
              "year": {"type": "integer", "minimum": 1800},
              "month": {"type": "integer", "minimum": 1, "maximum": 12},
              "doi": {"type": "string"},
              "citation_style": {"type": "string", "enum": ["apa", "chicago", "mla", "iee"]},
              "authors": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "first": {"type": "string"},
                    "last": {"type": "string"}
                  },
                  "required": ["first", "last"]
                }
              }
            },
            "required": ["title"]
          }
        }
      }
    }
  },
  "required": ["version", "format", "meta", "data"]
}
